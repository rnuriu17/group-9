{% extends "templates/auth.twig" %}


{% block content %}
	<form action="register">


		{{element('email', {label: 'Email', placeholder:'enter your email', name:'email', required: true})}}

		{{element('input', {label: 'Shop name', placeholder:'enter your shop name', name:'shop', required: true})}}
		{{element('input', {label: 'Nipt', placeholder:'enter your NIPT number', name:'tax', required: true})}}

		{{element('input', {label: 'Address', placeholder:'enter your address', name:'address', required: true})}}

		{{element('input', {label: 'Phone nr', placeholder:'enter your phone number', name:'phone', required: true})}}

		{{element('input', {label: 'Username', placeholder:'enter your username', name:'username', required: true})}}

		{{element('password', {label: 'Password', placeholder:'enter your password', name:'password', required: true})}}
		{{element('password', {label: 'Confirm Password', placeholder:'enter your password again', name:'confirm_password', required: true})}}

		<button type="submit" class="button is-medium is-success is-fullwidth has-margin-top-sm">
			<span class="icon">
				<i class="fas fa-user-plus"></i>
			</span>
			<span>Register</span>
		</button>
	</form>

	<a href="{{u}}login" class="has-text-info is-inline-block is-link has-margin-top-sm">Already registered? Click here to login</a>
{% endblock %}
