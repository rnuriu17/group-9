{% extends "templates/page.twig" %}


{% block content %}

	<form action="users-edit">

		<div class="container">

			<div class="columns">

				<div class="column is-6">
					<h2 class="title is-4">General info</h2>

					{{element('hidden', {'value':user.hash, 'name': 'hash'})}}
					{{element('email', {label: 'Email', value: user.email, placeholder:'enter email', name:'email', required: true})}}

					{% if user.role == 'client' %}
						{{element('input', {label: 'Shop name', placeholder:'enter shop name', value: user.shop, name:'shop', required: true})}}
						{{element('input', {label: 'Nipt', placeholder:'enter NIPT number', value: user.tax, name:'tax', required: true})}}
					{% endif %}

					{{element('input', {label: 'Address', placeholder:'enter address', value: user.address, name:'address', required: true})}}

					{{element('input', {label: 'Phone nr', placeholder:'enter phone number', value: user.phone, name:'phone', required: true})}}

					{{element('input', {label: 'Username', placeholder:'enter username', value: user.username, name:'username', required: true})}}
					{{element('select', {label: 'Role', value: user.role, name:'role', required: true, values: roles})}}

				</div>

				<div class="column is-6 has-padding-left-md">

					<h2 class="title is-4">Change password</h2>
					<p class="subtitle is-6">If you don't want to change password, please leave it blank.</p>
					{{element('password', {label: 'Password', placeholder:'enter password', name:'password'})}}
					{{element('password', {label: 'Confirm Password', placeholder:'enter password again', name:'confirm_password'})}}

				</div>

			</div>
			<div class="columns">

				<div class="column is-12">


					<button type="submit" class="button is-medium is-success has-margin-top-sm">
						<span>Save</span>
						<span class="icon">
							<i class="fas fa-check"></i>
						</span>
					</button>
				</div>
			</div>

		</div>
	</form>

{% endblock %}
